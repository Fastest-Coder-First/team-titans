{
  "extends": "loopback",
  "rules": {
    "max-len": ["error", {
      "code": 120,
      "ignoreComments": true,
      "ignoreStrings": true,
      "ignoreRegExpLiterals": true,
      "ignorePattern": "^\\s*(logger\\.|.*new Error)"
    }],
    "one-var": ["error", {
      "uninitialized": "consecutive"
    }]
  }
}
